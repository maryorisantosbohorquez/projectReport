<Window x:Class="ProjectReport.Views.Geometry.ToolJointConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tool Joint Configuration"
        Height="500" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackground}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Tool Joint Properties"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Margin="0 0 0 25"
                   Foreground="{DynamicResource AppPrimaryText}"/>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <StackPanel Margin="0 0 0 20">
                    <TextBlock Text="Tool Joint OD (in)"
                               FontSize="15"
                               Foreground="{DynamicResource AppSecondaryText}"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="TJ_OD_TextBox"
                             Text="{Binding TJ_OD, UpdateSourceTrigger=LostFocus}"
                             Height="35"
                             Padding="8,8"
                             Foreground="#000000"
                             Background="White"
                             FontSize="14"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"/>
                </StackPanel>

                <StackPanel Margin="0 0 0 20">
                    <TextBlock Text="Tool Joint ID (in)"
                               FontSize="15"
                               Foreground="{DynamicResource AppSecondaryText}"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="TJ_ID_TextBox"
                             Text="{Binding TJ_ID, UpdateSourceTrigger=LostFocus}"
                             Height="35"
                             Padding="8,8"
                             Foreground="#000000"
                             Background="White"
                             FontSize="14"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"/>
                </StackPanel>

                <StackPanel Margin="0 0 0 20">
                    <TextBlock Text="Tool Joint Length (ft)"
                               FontSize="15"
                               Foreground="{DynamicResource AppSecondaryText}"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="TJ_Length_TextBox"
                             Text="{Binding TJ_Length, UpdateSourceTrigger=LostFocus}"
                             Height="35"
                             Padding="8,8"
                             Foreground="#000000"
                             Background="White"
                             FontSize="14"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Weight (lb/ft)"
                               FontSize="15"
                               Foreground="{DynamicResource AppSecondaryText}"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="Weight_TextBox"
                             Text="{Binding Weight, UpdateSourceTrigger=LostFocus}"
                             Height="35"
                             Padding="8,8"
                             Foreground="#000000"
                             Background="White"
                             FontSize="14"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 25 0 0">

            <Button Content="Cancel" Width="100" Height="35" Command="{Binding CancelCommand}" Margin="0 0 15 0" Style="{StaticResource DefaultButton}"/>
            <Button Content="Save" Width="100" Height="35" Command="{Binding SaveCommand}" Style="{StaticResource DefaultButton}"/>

        </StackPanel>
    </Grid>

</Window>
