<UserControl x:Class="ProjectReport.Views.Geometry.WellboreVisualization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectReport.Views.Geometry"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Canvas x:Name="VisualizationCanvas" Width="400" Height="Auto" 
                Background="White" Margin="10">
            <!-- Wellbore sections will be drawn here -->
        </Canvas>
    </ScrollViewer>
</UserControl>
