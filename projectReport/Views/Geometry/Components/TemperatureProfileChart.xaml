<UserControl x:Class="ProjectReport.Views.Geometry.Components.TemperatureProfileChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <lvc:CartesianChart Series="{Binding SeriesCollection, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           LegendLocation="Top"
                           Hoverable="True"
                           DataTooltip="{x:Null}">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Temperature (Â°F)" 
                         LabelFormatter="{Binding XAxisFormatter, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         MinValue="0">
                    <lvc:Axis.Separator>
                        <lvc:Separator Step="50"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="TVD (ft)" 
                         LabelFormatter="{Binding YAxisFormatter, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         MinValue="0">
                    <!-- Inverted axis: depth increases downward -->
                    <lvc:Axis.Separator>
                        <lvc:Separator Step="1000"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</UserControl>
