<Window x:Class="ProjectReport.Views.Geometry.PressureDropConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pressure Drop Configuration"
        Height="500" Width="650"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackground}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Pressure Drop Profile"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0 0 0 20"
                   Foreground="{DynamicResource AppPrimaryText}"/>

        <!-- Mud Density -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15" VerticalAlignment="Top">
             <TextBlock Text="Mud Density (ppg):" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="15" Foreground="{DynamicResource AppSecondaryText}"/>
             <TextBox Text="{Binding MudDensity, UpdateSourceTrigger=PropertyChanged}" Width="100" Height="30" Style="{StaticResource DefaultTextBox}"/>
        </StackPanel>

        <!-- Data Table -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Data}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  Background="{DynamicResource AppCardBackground}"
                  HeadersVisibility="Column"
                  Margin="0 0 0 20">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Flow Rate (gpm)"
                                    Binding="{Binding FlowRate}"
                                    Width="*"/>

                <DataGridTextColumn Header="Pressure Drop (psi)"
                                    Binding="{Binding PressureDrop}"
                                    Width="*"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Cancel" Width="100" Height="35" Command="{Binding CancelCommand}" Margin="0 0 15 0" Style="{StaticResource DefaultButton}"/>
            <Button Content="Save" Width="100" Height="35" Command="{Binding SaveCommand}" Style="{StaticResource DefaultButton}"/>

        </StackPanel>

    </Grid>
</Window>
