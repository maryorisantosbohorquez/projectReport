<Window x:Class="ProjectReport.Views.Geometry.VisualizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectReport.Views.Geometry"
        mc:Ignorable="d"
        Title="Geometry Visualization" Height="800" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="10" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Visualization Type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="VisualizationTypeComboBox" Width="150" SelectionChanged="VisualizationTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Wellbore Geometry" IsSelected="True"/>
                    <ComboBoxItem Content="Drill String Geometry"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Row="1" x:Name="VisualizationContent"/>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <Button Content="Close" Width="80" HorizontalAlignment="Right" Click="CloseButton_Click"/>
        </Border>
    </Grid>
</Window>
