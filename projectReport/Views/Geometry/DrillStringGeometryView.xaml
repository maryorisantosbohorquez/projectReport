<UserControl x:Class="ProjectReport.Views.Geometry.DrillStringGeometryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:drillString="clr-namespace:ProjectReport.Models.Geometry.DrillString;assembly=ProjectReport"
             Background="{StaticResource WhiteBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource GrayBrush}" CornerRadius="4" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Well:" FontSize="14" FontWeight="SemiBold" 
                          VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource BlackBrush}"/>
                <TextBox Grid.Column="1" x:Name="WellNameTextBox" Text="{Binding WellName, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0,20,0" Height="30"/>
                
                <TextBlock Grid.Column="2" Text="Report Number:" FontSize="14" FontWeight="SemiBold" 
                          VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource BlackBrush}"/>
                <TextBox Grid.Column="3" x:Name="ReportNumberTextBox" Text="{Binding ReportNumber, UpdateSourceTrigger=PropertyChanged}"
                        Height="30"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Buttons -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
                    <Button Content="Import from CSV/Excel" 
                           Style="{StaticResource DefaultButton}" 
                           Margin="0,0,10,0"
                           Command="{Binding ImportDrillStringDataCommand}"/>
                    <Button Content="Add Component" 
                           Style="{StaticResource DefaultButton}" 
                           Click="AddDrillStringComponent_Click"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" x:Name="DrillStringDataGrid" 
                         ItemsSource="{Binding DrillStringComponents}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="True"
                         SelectionMode="Single"
                         AllowDrop="True"
                         PreviewMouseLeftButtonDown="DrillStringDataGrid_PreviewMouseLeftButtonDown"
                         Drop="DrillStringDataGrid_Drop"
                         Margin="0,0,0,15">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="AllowDrop" Value="True"/>
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="Row_PreviewMouseLeftButtonDown"/>
                            <EventSetter Event="Drop" Handler="Row_Drop"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Component Type" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ComponentTypeString}" 
                                              VerticalAlignment="Center" Padding="10,8"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.ComponentTypes, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                             SelectedItem="{Binding ComponentTypeString, UpdateSourceTrigger=PropertyChanged}"
                                             DisplayMemberPath="."/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="Length (ft)" Binding="{Binding Length, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" Width="120">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                            <Setter Property="Background" Value="#EE7E32"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="OD (in)" Binding="{Binding Od, StringFormat=F2}" Width="100"/>
                        <DataGridTextColumn Header="ID (in)" Binding="{Binding IdValue, StringFormat=F2}" Width="100"/>
                        <DataGridTextColumn Header="Volume (bbl)" Binding="{Binding InternalVolume, StringFormat=F2}" Width="120" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="Config" MinWidth="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Configurar..."
                                        Padding="10,4"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource DefaultButton}"
                                        Click="ConfigureComponent_Click"
                                        Tag="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </ScrollViewer>

        <!-- Footer Section -->
        <Border Grid.Row="2" Background="{StaticResource GrayBrush}" CornerRadius="4" Padding="15" Margin="20,0,20,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Force to Bottom Checkbox -->
                <CheckBox Grid.Column="0" Content="Force Drill String to Bottom"
                          IsChecked="{Binding ForceDrillStringToBottom}"
                          VerticalAlignment="Center" FontSize="14"/>

                <!-- Totals -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Total Depth:" FontWeight="SemiBold" Foreground="{StaticResource AppSecondaryText}"/>
                        <TextBlock Text="{Binding TotalWellboreMD, StringFormat='{}{0:F2} ft'}" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Total DS Volume:" FontWeight="SemiBold" Foreground="{StaticResource AppSecondaryText}"/>
                        <TextBlock Text="{Binding TotalDrillStringVolume, StringFormat='{}{0:F2} bbl'}" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Depth Differential:" FontWeight="SemiBold" Foreground="{StaticResource AppSecondaryText}"/>
                        <TextBlock Text="{Binding DepthDifferential, StringFormat='{}{0:F2} ft'}" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

