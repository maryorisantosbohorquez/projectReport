<Window x:Class="ProjectReport.Views.Modals.ValidationResultModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Validation Errors" Height="450" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Window.Resources>
    
    <Border Background="White" BorderBrush="#FF4500" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#FFE6E6" Padding="15,10" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="WELLBORE GEOMETRY VALIDATION ERRORS" FontSize="14" FontWeight="Bold" Foreground="#D8000C" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel>
                    <TextBlock Text="The following errors must be corrected:" Margin="0,0,0,15" FontSize="14"/>
                    
                    <ItemsControl ItemsSource="{Binding GroupedItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,15">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="{Binding Icon}" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding SectionName}" FontWeight="Bold" Foreground="#333"/>
                                    </StackPanel>
                                    
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="20,2,0,2">
                                                    <TextBlock Text="•" Margin="0,0,5,0" Foreground="{Binding SeverityColor}"/>
                                                    <TextBlock Text="{Binding Message}" Foreground="#555" TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <Border Background="#F9F9F9" Padding="10" Margin="0,10,0,0" CornerRadius="4" BorderBrush="#EEE" BorderThickness="1">
                        <StackPanel>
                             <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                                 <TextBlock Text="Total Errors: " FontWeight="SemiBold"/>
                                 <TextBlock Text="{Binding ErrorCount}" FontWeight="Bold" Foreground="#D8000C"/>
                             </StackPanel>
                             <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                 <TextBlock Text="Total Warnings: " FontWeight="SemiBold"/>
                                 <TextBlock Text="{Binding WarningCount}" FontWeight="Bold" Foreground="#FF8C00"/>
                             </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#F5F5F5" Padding="10" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Warning Confirmation (Visible only if no Errors but has Warnings) -->
                    <Button Content="Continuar" Width="100" Height="30" Margin="0,0,10,0" 
                            Click="Continue_Click" 
                            Visibility="{Binding CanContinue, Converter={StaticResource BoolToVis}}"/>
                            
                    <Button Content="Cancel / OK" Width="100" Height="30" IsDefault="True" Click="OK_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
