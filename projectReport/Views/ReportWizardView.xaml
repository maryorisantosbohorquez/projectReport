<Window x:Class="ProjectReport.Views.ReportWizardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectReport.Views"
        xmlns:wizard="clr-namespace:ProjectReport.Views.ReportWizard"
        mc:Ignorable="d"
        Title="New Daily Report" Height="700" Width="1000" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header -->
            <RowDefinition Height="Auto" /> <!-- Steps -->
            <RowDefinition Height="*" />    <!-- Content -->
            <RowDefinition Height="Auto" /> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#F8F9FA" Padding="20,15" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1">
            <DockPanel LastChildFill="False">
                <TextBlock Text="Create New Daily Report" FontSize="20" FontWeight="SemiBold" Foreground="#343A40" DockPanel.Dock="Left"/>
                <Button Content="Save Draft" Command="{Binding SaveDraftCommand}" Padding="15,5" Background="Transparent" BorderBrush="#6C757D" Foreground="#6C757D" DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>

        <!-- Step Indicator -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Step 1 -->
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="1. Report Details" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Foreground" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsStep1Active}" Value="True">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#007BFF"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Rectangle Height="3" Fill="#007BFF" Visibility="{Binding IsStep1Active, Converter={StaticResource BoolToVis}}" Margin="0,5,0,0" />
            </StackPanel>
             
            <!-- Step 2 -->
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TextBlock Text="2. Personnel" HorizontalAlignment="Center">
                     <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Foreground" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsStep2Active}" Value="True">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#007BFF"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Rectangle Height="3" Fill="#007BFF" Visibility="{Binding IsStep2Active, Converter={StaticResource BoolToVis}}" Margin="0,5,0,0" />
            </StackPanel>
        </Grid>

        <!-- Content Area -->
        <Border Grid.Row="2" Padding="20" Background="White">
            <Grid>
                <wizard:ReportDetailsPage Visibility="{Binding IsStep1Active, Converter={StaticResource BoolToVis}}" />
                <wizard:PersonnelPage Visibility="{Binding IsStep2Active, Converter={StaticResource BoolToVis}}" />
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Padding="20" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,10,0" Padding="20,10" Background="White" BorderBrush="#DEE2E6" />
                
                <Button Content="Back" Command="{Binding BackCommand}" Margin="0,0,10,0" Padding="20,10" IsEnabled="{Binding CanGoBack, Mode=OneWay}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsStep1Active}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Next" Command="{Binding NextCommand}" Padding="30,10" Background="#007BFF" Foreground="White" BorderThickness="0">
                     <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsStep2Active}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Finish &amp; Save" Command="{Binding FinishCommand}" Padding="30,10" Background="#28A745" Foreground="White" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsStep2Active}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
