<UserControl x:Class="ProjectReport.Views.GeometryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectReport.Views"
             xmlns:geometry="clr-namespace:ProjectReport.Views.Geometry"
             xmlns:converters="clr-namespace:ProjectReport.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Loaded="GeometryView_Loaded"
             KeyDown="GeometryView_KeyDown">
    <Grid>
        <TabControl Style="{StaticResource GeometryTabControl}"
                    SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
            <TabControl.Resources>
                <BooleanToVisibilityConverter x:Key="BoolToVis"/>
                <converters:CollectionToVisibilityConverter x:Key="CollectionToVis"/>
                <converters:NullToVisibilityConverter x:Key="NullToVis"/>
            </TabControl.Resources>
            
            <!-- Wellbore Geometry -->
            <TabItem Header="Wellbore Geometry">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Add Button and Total Display -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Total Wellbore MD: " FontSize="14" FontWeight="SemiBold" 
                                          Foreground="#FF808080" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding TotalWellboreMD, StringFormat='{}{0:F2} ft'}" 
                                          FontSize="14" FontWeight="Bold" 
                                          Foreground="Orange"/>
                            </StackPanel>
                            <Button Grid.Column="1" Content="Add Section" 
                                   Background="#FFE0E0E0" Foreground="Black" Padding="10,5" Margin="5" 
                                   Click="AddWellboreSection_Click"/>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="2" x:Name="WellboreDataGrid" 
          ItemsSource="{Binding WellboreComponents}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="True"
          SelectionMode="Single">
    <DataGrid.RowStyle>
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasValidationError}" Value="True">
                    <Setter Property="Background" Value="#FFF5F5"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </DataGrid.RowStyle>
    <DataGrid.Columns>
        <!-- 0. Validation Status -->
         <DataGridTemplateColumn Header="" Width="30">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock Text="!" 
                               Foreground="Red" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               ToolTip="{Binding ValidationMessage}"
                               Visibility="{Binding HasValidationError, Converter={StaticResource BoolToVis}}"/>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>

        <!-- 1. ID -->
        <DataGridTextColumn Header="ID"
                            Binding="{Binding Id}"
                            Width="60"
                            IsReadOnly="True"/>

        <!-- 2. Section Type -->
        <DataGridTemplateColumn Header="Section Type" Width="150">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding SectionType}" 
                               VerticalAlignment="Center" 
                               Padding="10,8"/>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellEditingTemplate>
                <DataTemplate>
                    <ComboBox 
                        ItemsSource="{Binding DataContext.WellboreSectionTypes, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                        SelectedItem="{Binding SectionType, UpdateSourceTrigger=PropertyChanged}"
                        DisplayMemberPath="."
                        VerticalAlignment="Center"
                        Margin="0"
                        Padding="5,0"/>
                </DataTemplate>
            </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <!-- 3. OD (in) - Always editable. For OpenHole: represents hole diameter -->
        <DataGridTemplateColumn Header="OD (in)" Width="100">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding OD, StringFormat=F3}" 
                               Padding="5,0" 
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasErrors}" Value="True">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="ToolTip" Value="{Binding ValidationMessage}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellEditingTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding OD, StringFormat=F3, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasErrors}" Value="True">
                                        <Setter Property="Background" Value="#FFF5F5"/>
                                        <Setter Property="BorderBrush" Value="Red"/>
                                        <Setter Property="ToolTip" Value="{Binding ValidationMessage}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </DataTemplate>
            </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <!-- 4. ID (in) - Disabled for OpenHole (always 0.000) -->
        <DataGridTemplateColumn Header="ID (in)" Width="100">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ID, StringFormat=F3}" 
                               Padding="5,0" 
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <!-- Para OpenHole: ID siempre es 0.000 -->
                                    <DataTrigger Binding="{Binding SectionType}" Value="OpenHole">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Setter Property="FontStyle" Value="Italic"/>
                                    </DataTrigger>
                                    <!-- Highlight validation errors -->
                                    <DataTrigger Binding="{Binding HasErrors}" Value="True">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="ToolTip" Value="{Binding ValidationMessage}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellEditingTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding ID, StringFormat=F3, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <!-- Para OpenHole: deshabilitar ediciÃ³n de ID -->
                                    <DataTrigger Binding="{Binding SectionType}" Value="OpenHole">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </DataTrigger>
                                    <!-- Highlight validation errors -->
                                    <DataTrigger Binding="{Binding HasErrors}" Value="True">
                                        <Setter Property="Background" Value="#FFF5F5"/>
                                        <Setter Property="BorderBrush" Value="Red"/>
                                        <Setter Property="ToolTip" Value="{Binding ValidationMessage}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </DataTemplate>
            </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <!-- 5. Top MD (ft) -->
        <DataGridTextColumn Header="Top MD (ft)" 
                            Binding="{Binding TopMD, StringFormat=F2}" 
                            Width="120"/>

        <!-- 6. Bottom MD (ft) -->
        <DataGridTextColumn Header="Bottom MD (ft)" 
                            Binding="{Binding BottomMD, StringFormat=F2}" 
                            Width="130"/>

        <!-- 7. Washout (%) - solo activo para OpenHole -->
        <DataGridTemplateColumn Header="Washout (%)" Width="120">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock Padding="5,0"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <!-- Default: N/A si no es OpenHole -->
                                <Setter Property="Text" Value="N/A"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="FontStyle" Value="Italic"/>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SectionType}" Value="OpenHole">
                                        <Setter Property="Text" 
                                                Value="{Binding Washout, StringFormat=F2}"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontStyle" Value="Normal"/>
                                    </DataTrigger>
                                    <!-- Highlight validation errors for washout -->
                                    <DataTrigger Binding="{Binding HasErrors}" Value="True">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="ToolTip" Value="{Binding ValidationMessage}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>

            <DataGridTemplateColumn.CellEditingTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding Washout, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <!-- Default: deshabilitado -->
                                <Setter Property="IsEnabled" Value="False"/>
                                <Style.Triggers>
                                    <!-- Solo habilitado cuando es OpenHole -->
                                    <DataTrigger Binding="{Binding SectionType}" Value="OpenHole">
                                        <Setter Property="IsEnabled" Value="True"/>
                                    </DataTrigger>
                                    <!-- Highlight validation errors -->
                                    <DataTrigger Binding="{Binding HasErrors}" Value="True">
                                        <Setter Property="Background" Value="#FFF5F5"/>
                                        <Setter Property="BorderBrush" Value="Red"/>
                                        <Setter Property="ToolTip" Value="{Binding ValidationMessage}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </DataTemplate>
            </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <!-- 8. Volume (bbl) -->
        <DataGridTextColumn Header="Volume (bbl)" 
                            Binding="{Binding Volume, StringFormat=F2}" 
                            Width="120" 
                            IsReadOnly="True"/>

        <!-- 9. Actions -->
        <DataGridTemplateColumn Header="Actions" Width="120">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="â†‘" 
                                Margin="2" 
                                Padding="5,0" 
                                ToolTip="Move Up"
                                Click="MoveWellboreUp_Click" 
                                Tag="{Binding}"/>
                        <Button Content="â†“" 
                                Margin="2" 
                                Padding="5,0" 
                                ToolTip="Move Down"
                                Click="MoveWellboreDown_Click" 
                                Tag="{Binding}"/>
                        <Button Content="Ã—" 
                                Margin="2" 
                                Padding="5,0" 
                                ToolTip="Delete"
                                Click="DeleteWellbore_Click" 
                                Tag="{Binding}" 
                                Foreground="Red"/>
                    </StackPanel>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>

    </DataGrid.Columns>
</DataGrid>

                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Drill String Geometry -->
            <TabItem Header="Drill String Geometry">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Options and Info -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Total Drill String MD: " FontSize="12" FontWeight="SemiBold" 
                                              Foreground="#FF808080" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding TotalDrillStringLength, StringFormat='{}{0:F2} ft'}" 
                                              FontSize="12" FontWeight="Bold" 
                                              Foreground="Orange" Margin="0,0,20,0"/>
                                    <TextBlock Text="Depth to Bottom: " FontSize="12" FontWeight="SemiBold" 
                                              Foreground="#FF808080" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding DepthDifferential, StringFormat='{}{0:+0.00;-0.00;0.00} ft'}" 
                                              FontSize="12" FontWeight="Bold" 
                                              Foreground="{Binding DepthDifferentialColor}"/>
                                    <!-- Status indicator -->
                                    <TextBlock Margin="10,0,0,0" FontSize="12" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DepthDifferentialStatus}" Value="OnBottom">
                                                        <Setter Property="Text" Value="ðŸŸ¢ On Bottom"/>
                                                        <Setter Property="Foreground" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DepthDifferentialStatus}" Value="Short">
                                                        <Setter Property="Text" Value="ðŸŸ¡ Not Reaching"/>
                                                        <Setter Property="Foreground" Value="Orange"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DepthDifferentialStatus}" Value="Overrun">
                                                        <Setter Property="Text" Value="ðŸ”´ Exceeds Depth"/>
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Total Wellbore MD: " FontSize="12" FontWeight="SemiBold" 
                                              Foreground="#FF808080" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding TotalWellboreMD, StringFormat='{}{0:F2} ft'}" 
                                              FontSize="12" FontWeight="Bold" 
                                              Foreground="Orange" Margin="0,0,20,0"/>
                                    <!-- BitToBottom display when last component is Bit -->
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Margin="0,0,10,0" Foreground="Blue"
                                              Visibility="{Binding BitToBottom, Converter={StaticResource NullToVis}}">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Bit to Bottom: {0:F2} ft">
                                                <Binding Path="BitToBottom"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                                <!-- BHA Suggestions when last component is DrillPipe -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10"
                                           Visibility="{Binding SuggestedBHAComponents, Converter={StaticResource CollectionToVis}}">
                                    <TextBlock Text="ðŸ’¡ Suggested BHA Components: " FontSize="11" FontWeight="SemiBold" 
                                              Foreground="#FF808080" Margin="0,0,10,0"/>
                                    <ItemsControl ItemsSource="{Binding SuggestedBHAComponents}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Margin="5,0" 
                                                          FontSize="11" Foreground="Blue"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <Button Content="ðŸ”¥ Force Drill String to Bottom" 
                                       Command="{Binding ForceToBottomCommand}"
                                       Background="#FF4CAF50" Foreground="White" Padding="10,5" 
                                       Margin="0,0,10,0" HorizontalAlignment="Left"
                                       ToolTip="Automatically extend the last component to reach well bottom"/>
                            </StackPanel>
                            <Button Grid.Column="1" Content="Add Component" 
                                   Background="#FFE0E0E0" Foreground="Black" Padding="10,5" Margin="5" 
                                   Click="AddDrillStringComponent_Click"/>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="2" x:Name="DrillStringDataGrid" 
                                 ItemsSource="{Binding DrillStringComponents}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="True"
                                 SelectionMode="Single"
                                 CanUserReorderColumns="False"
                                 AllowDrop="True"
                                 Drop="DrillStringDataGrid_Drop"
                                 PreviewMouseLeftButtonDown="DrillStringDataGrid_PreviewMouseLeftButtonDown"
                                 PreviewMouseMove="DrillStringDataGrid_PreviewMouseMove">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <!-- Highlight rows with validation errors -->
                                        <DataTrigger Binding="{Binding HasErrors}" Value="True">
                                            <Setter Property="Background" Value="#FFF5F5"/>
                                            <Setter Property="BorderBrush" Value="Red"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                        </DataTrigger>
                                        <!-- Highlight rows that were auto-adjusted -->
                                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                            <Setter Property="BorderBrush" Value="#4CAF50"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <!-- Validation Status Column -->
                                <DataGridTemplateColumn Header="" Width="30">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="âŒ" 
                                                      Foreground="Red" 
                                                      FontWeight="Bold" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      ToolTip="{Binding ValidationMessage}"
                                                      Visibility="{Binding HasErrors, Converter={StaticResource BoolToVis}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="ID" 
                                                 Binding="{Binding Id}" 
                                                 Width="60" 
                                                 IsReadOnly="True"/>
                                <DataGridTextColumn Header="Name" 
                                                 Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                                 Width="150"/>
                                <DataGridTemplateColumn Header="Type" 
                                                     Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ComponentType}" 
                                                     VerticalAlignment="Center" 
                                                     Padding="10,8"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox 
                                                ItemsSource="{Binding DataContext.ComponentTypes, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                SelectedItem="{Binding ComponentType, UpdateSourceTrigger=PropertyChanged}"
                                                DisplayMemberPath="."
                                                VerticalAlignment="Center"
                                                Margin="0"
                                                Padding="5,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Length (ft)" 
                                                 Binding="{Binding Length, StringFormat=F2}" 
                                                 Width="120"/>
                                <DataGridTextColumn Header="OD (in)" 
                                                 Binding="{Binding OD, StringFormat=F3, UpdateSourceTrigger=PropertyChanged}" 
                                                 Width="100"/>
                                <DataGridTextColumn Header="ID (in)" 
                                                 Binding="{Binding ID, StringFormat=F3, UpdateSourceTrigger=PropertyChanged}" 
                                                 Width="100"/>
                                <DataGridTextColumn Header="Volume (bbl)" 
                                                 Binding="{Binding InternalVolume, StringFormat=F2}" 
                                                 Width="120" 
                                                 IsReadOnly="True"/>
                                <DataGridTemplateColumn Header="Actions" 
                                                     Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Config" 
                                                       Background="#FFE0E0E0" 
                                                       Foreground="Black" 
                                                       Padding="8,2" 
                                                       Margin="2"
                                                       ToolTip="Configure Component"
                                                       Click="ConfigureComponent_Click"
                                                       Tag="{Binding}"/>
                                                <Button Content="â†‘" 
                                                       Margin="2" 
                                                       Padding="5,0" 
                                                       ToolTip="Move Up"
                                                       Click="MoveDrillStringUp_Click" 
                                                       Tag="{Binding}"/>
                                                <Button Content="â†“" 
                                                       Margin="2" 
                                                       Padding="5,0" 
                                                       ToolTip="Move Down"
                                                       Click="MoveDrillStringDown_Click" 
                                                       Tag="{Binding}"/>
                                                <Button Content="Ã—" 
                                                       Margin="2" 
                                                       Padding="5,0" 
                                                       ToolTip="Delete"
                                                       Click="DeleteDrillString_Click" 
                                                       Tag="{Binding}" 
                                                       Foreground="Red"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Survey -->
            <TabItem Header="Survey">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Add Survey Point Button and Excel Import -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="1" Content="Load from Excel" 
                                   Background="#FFE0E0E0" Foreground="Black" Padding="10,5" 
                                   Margin="0,0,10,0"
                                   Click="LoadSurveyFromExcel_Click"/>
                            <Button Grid.Column="2" Content="Add Survey Point" 
                                   Background="#FFE0E0E0" Foreground="Black" Padding="10,5" Margin="5" 
                                   Click="AddSurveyPoint_Click"/>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1" x:Name="SurveyDataGrid" 
                                 ItemsSource="{Binding SurveyPoints}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="True"
                                 SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" IsReadOnly="True"/>
                                <DataGridTextColumn Header="MD (ft)" Binding="{Binding MD, StringFormat=F2}" Width="130"/>
                                <DataGridTextColumn Header="TVD (ft)" Binding="{Binding TVD, StringFormat=F2}" Width="120"/>
                                <DataGridTextColumn Header="Hole Angle (deg)" Binding="{Binding HoleAngle, StringFormat=F2}" Width="140"/>
                                <DataGridTextColumn Header="Azimuth (deg)" Binding="{Binding Azimuth, StringFormat=F2}" Width="130"/>
                                <DataGridTextColumn Header="Horizontal Displacement (ft)" Binding="{Binding Northing, StringFormat=F2}" Width="200"/>
                                <DataGridTemplateColumn Header="Actions" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="â†‘" 
                                                       Margin="2" 
                                                       Padding="5,0" 
                                                       ToolTip="Move Up"
                                                       Click="MoveSurveyUp_Click" 
                                                       Tag="{Binding}"/>
                                                <Button Content="â†“" 
                                                       Margin="2" 
                                                       Padding="5,0" 
                                                       ToolTip="Move Down"
                                                       Click="MoveSurveyDown_Click" 
                                                       Tag="{Binding}"/>
                                                <Button Content="Ã—" 
                                                       Margin="2" 
                                                       Padding="5,0" 
                                                       ToolTip="Delete"
                                                       Click="DeleteSurvey_Click" 
                                                       Tag="{Binding}" 
                                                       Foreground="Red"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Thermal Gradient -->
            <TabItem Header="Thermal Gradient">
                <Grid Margin="20">
                    <geometry:ThermalGradientView DataContext="{Binding ThermalGradientViewModel}"/>
                </Grid>
            </TabItem>

            <!-- Well Test -->
            <TabItem Header="Well Test">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Add Well Test Button -->
                        <Button Grid.Row="0" Content="Add Well Test" 
                               Background="#FFE0E0E0" Foreground="Black" Padding="10,5"
                               HorizontalAlignment="Right" Margin="0,0,0,15"
                               Click="AddWellTest_Click"/>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1" x:Name="WellTestDataGrid" 
                                 ItemsSource="{Binding WellTests}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="True"
                                 SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" IsReadOnly="True"/>
                                <DataGridTemplateColumn Header="Section" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Section}" VerticalAlignment="Center" Padding="5,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding DataContext.WellboreSectionNames, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                     SelectedItem="{Binding Section, UpdateSourceTrigger=PropertyChanged}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Dropdown Test Type" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding TypeString}" 
                                                      VerticalAlignment="Center" Padding="10,8"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding DataContext.WellTestTypes, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                     SelectedItem="{Binding TypeString, UpdateSourceTrigger=PropertyChanged}"
                                                     DisplayMemberPath="."/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Test Value (ppb)" Binding="{Binding TestValue, StringFormat=F2}" Width="140"/>
                                <DataGridTemplateColumn Header="Actions" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="â†‘" 
                                                       Margin="2" 
                                                       Padding="5,0" 
                                                       ToolTip="Move Up"
                                                       Click="MoveWellTestUp_Click" 
                                                       Tag="{Binding}"/>
                                                <Button Content="â†“" 
                                                       Margin="2" 
                                                       Padding="5,0" 
                                                       ToolTip="Move Down"
                                                       Click="MoveWellTestDown_Click" 
                                                       Tag="{Binding}"/>
                                                <Button Content="Ã—" 
                                                       Margin="2" 
                                                       Padding="5,0" 
                                                       ToolTip="Delete"
                                                       Click="DeleteWellTest_Click" 
                                                       Tag="{Binding}" 
                                                       Foreground="Red"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Summary -->
            <TabItem Header="Summary">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Summary Values -->
                        <GroupBox Grid.Row="0" Header="Volume Summary" Margin="0,0,0,20">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="10">
                                    <TextBlock Text="Total Wellbore Volume" FontSize="12" FontWeight="SemiBold" 
                                              Foreground="#FF808080" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding TotalWellboreVolume, StringFormat='{}{0:F2} bbl'}" 
                                              FontSize="18" FontWeight="Bold" 
                                              Foreground="Orange"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Margin="10">
                                    <TextBlock Text="Total Drill String Volume" FontSize="12" FontWeight="SemiBold" 
                                              Foreground="#FF808080" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding TotalDrillStringVolume, StringFormat='{}{0:F2} bbl'}" 
                                              FontSize="18" FontWeight="Bold" 
                                              Foreground="Orange"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" Margin="10">
                                    <TextBlock Text="Total Annular Volume" FontSize="12" FontWeight="SemiBold" 
                                              Foreground="#FF808080" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding TotalAnnularVolume, StringFormat='{}{0:F2} bbl'}" 
                                              FontSize="18" FontWeight="Bold" 
                                              Foreground="Orange"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3" Margin="10">
                                    <TextBlock Text="Total Circulation Volume" FontSize="12" FontWeight="SemiBold" 
                                              Foreground="#FF808080" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding TotalCirculationVolume, StringFormat='{}{0:F2} bbl'}" 
                                              FontSize="18" FontWeight="Bold" 
                                              Foreground="Orange"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- Annular Volume Details -->
                        <GroupBox Grid.Row="1" Header="Annular Volume Details" Margin="0,0,0,20">
                            <DataGrid ItemsSource="{Binding AnnularVolumeDetails}" 
                                     AutoGenerateColumns="False"
                                     CanUserAddRows="False"
                                     CanUserDeleteRows="False"
                                     IsReadOnly="True"
                                     MaxHeight="250"
                                     Margin="10"
                                     AlternatingRowBackground="#FFF5F5F5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                    <DataGridTextColumn Header="Section/Component Name" Binding="{Binding Name}" Width="180"/>
                                    <DataGridTextColumn Header="Wellbore ID (in)" Binding="{Binding WellboreID, StringFormat=F3}" Width="120"/>
                                    <DataGridTextColumn Header="Drill String OD (in)" Binding="{Binding DrillStringOD, StringFormat=F3}" Width="140"/>
                                    <DataGridTextColumn Header="Depth Range (ft)" Binding="{Binding DepthRange}" Width="140"/>
                                    <DataGridTextColumn Header="Annular Volume (bbl)" Binding="{Binding Volume, StringFormat=F2}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <!-- Visual Scheme -->
                        <GroupBox Grid.Row="2" Header="Visual Scheme" Margin="0,0,0,20">
                            <Border Height="300" Background="LightGray" 
                                   CornerRadius="4" Margin="10">
                                <Canvas x:Name="VisualSchemeCanvas" Background="Transparent">
                                    <!-- Visual representation will be drawn here -->
                                    <TextBlock Text="Visual representation of wellbore and drill string geometry" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Foreground="#FF808080" 
                                              TextAlignment="Center" TextWrapping="Wrap"
                                              Canvas.Left="50" Canvas.Top="150"/>
                                </Canvas>
                            </Border>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
